<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    

    <LinearLayout
        style="@style/lightUI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="1dp" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_title"
                style="@style/lightUI.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Commander Coleman Striker"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2016v1"
                android:id="@+id/card_version"
                android:layout_gravity="right"
                android:gravity="right"/>
        </LinearLayout>

        <TextView
            android:id="@+id/card_subtitle"
            style="@style/lightUI.subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cygnar Warcaster"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <LinearLayout
            style="@style/lightUI.header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/card_fa"
                style="@style/lightUI.mainValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FA : C"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/card_unit_size"
                style="@style/lightUI.mainValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 leader &amp; 5 grunts" />

            <TextView
                android:id="@+id/card_cost"
                style="@style/lightUI.mainValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:text="WJ : +6" />

        </LinearLayout>
    </LinearLayout>
    
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@color/WhacAccentColor" >
    </FrameLayout>

</LinearLayout>