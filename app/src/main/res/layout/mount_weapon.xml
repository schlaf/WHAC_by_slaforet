<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="vertical"
    android:padding="0dp" >

    <TextView
        android:id="@+id/text_weapon_name"
        style="@style/lightUI.header.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/hello" />

    <LinearLayout
        android:id="@+id/weapon_title_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/empty"
            android:src="@drawable/terror_icon" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/empty"
            android:src="@drawable/open_fist_icon" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/empty"
            android:src="@drawable/tough_icon" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/text_weapon_name"
        android:background="@drawable/gradient_line_green" >

    </FrameLayout>
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_weapon_name"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/hello"
        android:src="@drawable/mount_weapon_icon" />

    <TableLayout
        android:id="@+id/TableLayout1"
        style="@style/lightUI.mainTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_weapon_name"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/imageView1" >

        <TableRow
            android:id="@+id/tableRow1"
            style="@style/lightUI.mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/carac_pow"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/carac_range" />

            <TextView
                android:id="@+id/carac_rng"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/carac_pow"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            style="@style/lightUI.mainValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/lightUI.header.title"
                android:id="@+id/carac_rng_value"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/_1"/>

            <TextView
                android:id="@+id/carac_pow_value"
                style="@style/lightUI.header.title"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/_1" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/weaponCapacitiesText"
        style="@style/lightUI.spell.description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TableLayout1"
        android:layout_marginBottom="1dp"
        android:text="TextView" />

</RelativeLayout>